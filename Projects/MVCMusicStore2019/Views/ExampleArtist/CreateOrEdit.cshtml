@model MVCMusicStore2019.ViewModels.ArtistViewModel

@{
    ViewBag.Title = "系统管理员编辑页面";
}

<h3>@ViewBag.Title</h3>

@Html.ValidationSummary(false)@*数据注解验证使用*@
@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(x => x.Name, new { @class = "col-md-2 control-label" })
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Description, new { @class = "col-md-2 control-label" })
        @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Tags, new { @class = "col-md-2 control-label" })
        @Html.TextBoxFor(x => x.Tags, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.ViewCount, new { @class = "col-md-2 control-label" })
        @Html.TextBoxFor(x => x.ViewCount, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Collection, new { @class = "col-md-2 control-label" })
        @Html.TextBoxFor(x => x.Collection, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">@ViewBag.Operation</button>

    @Html.ActionLink("取消", "Index", null, new { @class = "btn btn=default" })@*定义取消按钮，实现/GenreViewModels*@
}
