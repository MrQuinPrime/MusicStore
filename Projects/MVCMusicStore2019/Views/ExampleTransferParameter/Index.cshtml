
@model MVCMusicStore2019.Controllers.StudentList
@{
    ViewBag.Title = "Shopping Cart购物车页面";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>JavaScriptResult应用案例</h2>

@using (Ajax.BeginForm("StuList", new AjaxOptions()))
{
    for (int i = 0; i < Model.Count; i++)
    {
        <div>
            @Html.HiddenFor(x => x[i].Id)
            @Html.HiddenFor(x => x[i].Name)
            @Html.HiddenFor(x=>x[i].ClassName)

            @Html.DisplayFor(x => x[i].Name)
            @Html.EditorFor(x => x[i].ClassName)
        </div>
    }
    <input type="submit" value="提交订单" />
}